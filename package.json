{
    "name": "vscode-ipython",
    "displayName": "IPython for VSCode",
    "repository": "https://github.com/pancho111203/vscode-ipython",
    "description": "Integration with IPython, including useful keybindings",
    "version": "0.2.0",
    "publisher": "pancho111203",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
                "command": "ipython.sendFileContentsToIPython",
                "title": "Send File Contents To IPython"
            },
            {
                "command": "ipython.sendSelectedToIPython",
                "title": "Send Selected Text (or current line) To IPython"
            },
            {
                "command": "ipython.sendSelectedToIPythonAndAdvance",
                "title": "Send Selected Text (or current line) To IPython And Advance"
            }
        ],
        "keybindings": [
            {
                "key": "ctrl+r",
                "command": "ipython.sendFileContentsToIPython",
                "when": "editorFocus && editorLangId == 'python'"
            },
            {
                "key": "alt+enter",
                "command": "ipython.sendSelectedToIPython",
                "when": "editorFocus && !findInputFocussed && !replaceInputFocussed && editorLangId == 'python'"
            },
            {
                "key": "shift+enter",
                "command": "ipython.sendSelectedToIPythonAndAdvance",
                "when": "editorFocus && !findInputFocussed && !replaceInputFocussed && editorLangId == 'python'"
            }
	]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}
